{
  "compilerOptions": {
    "strict": true,
    "target": "es5",               
    "module": "commonjs", 
    "allowJs": false,
    "outDir": "./src",                
    "noImplicitAny": true,                  
    "esModuleInterop": true,
    "jsx": "react",
    "typeRoots": ["./src/**/*.d.ts"]
  },
  "include": [
    "./src/**/*",
  ],
  "exclude": [
    "./node_modules/**",
    "./src/**/*.spec.tsx",
    "./src/**/*.css.d.ts",
    "./src/**/*.js",
    "./src/**/*.css"
  ]
}