{
  "compilerOptions": {
    "strict": true,
    "target": "es5",               
    "module": "commonjs", 
    "allowJs": false,
    "outDir": "./build",                
    "noImplicitAny": true,                  
    "esModuleInterop": true,
    "jsx": "react",
    "typeRoots": ["./scenes/**.d.ts"]
  },
  "include": [
    "./scenes/**/*",
  ],
  "exclude": [
    "./node_modules/**",
    "./scenes/**/*.spec.tsx",
    "./scenes/**/*.css.d.ts",
    "./scenes/**/*.js",
    "./scenes/**/*.css"
  ]
}